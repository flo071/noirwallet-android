    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/pin_pad_key_margin_bottom"
            android:paddingTop="@dimen/pin_pad_key_margin_top"
            android:text="."
            android:textColor="@color/pin_pad_text"
            android:textSize="@dimen/pin_par_text_size" />

        <TextView
            android:id="@+id/num0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/pin_pad_key_margin_bottom"
            android:paddingTop="@dimen/pin_pad_key_margin_top"
            android:text="0"
            android:textColor="@color/pin_pad_text"
            android:textSize="@dimen/pin_par_text_size" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/numDelete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingBottom="@dimen/pin_pad_key_margin_bottom"
            android:paddingTop="@dimen/pin_pad_key_margin_top"
            android:src="@drawable/ic_delete_gray"
            android:text=""
            android:textColor="@color/pin_pad_text"
            android:textSize="@dimen/pin_par_text_size" />

