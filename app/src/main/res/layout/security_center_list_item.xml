<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:filterTouchesWhenObscured="true"
                android:orientation="horizontal"
                android:textDirection="locale">

    <org.noirofficial.presenter.customviews.BRText
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/check_mark"
        android:lineSpacingMultiplier="1.3"
        android:text="Test"
        android:textColor="@color/noir_jupiter_grey"
        android:textSize="@dimen/sub_header"
        app:customTFont="CircularPro-Bold.otf"/>

    <org.noirofficial.presenter.customviews.BRText
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_title"
        android:layout_below="@id/item_title"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/noir_jupiter_grey"
        android:textSize="@dimen/paragraph"/>

    <ImageView
        android:id="@+id/check_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_check_mark_grey"/>

</RelativeLayout>